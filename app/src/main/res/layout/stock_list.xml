<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

    <TextView
        android:id="@+id/stock_store"
        android:layout_width="350dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/stock_level"
        android:layout_width="350dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/stock_store"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="4dp"
        android:textSize="24sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/stock_empty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/warning_black_48dp"
        android:contentDescription="@string/notices_alert_priority_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>