<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Add the shift\n below to your rota?"
        android:gravity="center"
        android:textSize="38sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/start_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Start:"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/start_date"
        android:layout_width="240dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@id/start_title"
        android:layout_marginStart="40dp"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/end_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/end_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="End:"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="240dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/start_date"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@id/start_title"
        android:layout_marginStart="40dp"
        android:textSize="32sp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_style"
        android:text="Add shift"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:drawableLeft="@drawable/more_time_white_48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>