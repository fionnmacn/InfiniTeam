<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/currentTaskHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#1E90FF"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/current_task_header"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />
    
    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/currentTaskHeader"
        android:background="@color/black" />

    <TextView
        android:id="@+id/currentTask"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="0dp"
        android:paddingVertical="12dp"
        android:paddingStart="4dp"
        android:text=""
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="22sp" />

    <Button
        android:id="@+id/task_complete"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:layout_toStartOf="@id/task_decline"
        android:layout_marginTop="2dp"
        android:backgroundTint="#228B22	"
        android:text="@string/complete"
        android:textSize="8sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/task_decline"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#DC143C"
        android:text="@string/decline"
        android:textSize="8sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/currentTask"
        android:background="@color/black" />

    <TextView
        android:id="@+id/taskListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentTask"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#1E90FF"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="@string/available_tasks_header"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/taskListHeader"
        android:background="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/taskListHeader"
        android:layout_alignParentBottom="true"
        android:paddingVertical="4dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/task_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:src="@drawable/baseline_add_black_48dp"
        android:contentDescription="@string/create_task"
        android:backgroundTint="#1E90FF"
        android:layout_alignParentBottom="true" />

</RelativeLayout>