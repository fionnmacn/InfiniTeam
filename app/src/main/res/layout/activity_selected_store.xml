<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/store_selected_heading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Store:"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/store_selected_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/store_selected_heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/store_selected_stock_heading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Stock:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/store_selected_name"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/store_selected_stock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/store_selected_stock_heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/store_selected_number_heading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Number to reserve:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_selected_stock"
        android:layout_marginStart="4dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/store_selected_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="number"
        android:hint="Enter the number of products to reserve"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_selected_number_heading" />

    <Button
        android:id="@+id/reserve_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_style"
        android:text="Reserve"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/bookmark_add_white_48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>